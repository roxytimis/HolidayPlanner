<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HolidayPlanner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HolidayPlanner"
    Shell.FlyoutBehavior="Disabled"
    Title="HolidayPlanner">
    <TabBar>
        
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title ="My Notes"
            ContentTemplate ="{DataTemplate local:NotesPage }"/>
        <ShellContent
            Title ="Countries"
            ContentTemplate ="{DataTemplate local:ListOfCountriesPage }"/>
        <ShellContent
            Title ="Planner"
            ContentTemplate ="{DataTemplate local:PlannerEntryPage}"/>
    </TabBar>

</Shell>
